[Unit]
Description=Open vSwitch Forwarding Unit for VTEP emulator
After=ovsdb-server-vtep.service network-pre.target
Before=network.target network.service
Requires=ovsdb-server-vtep.service
ReloadPropagatedFrom=ovsdb-server-vtep.service
AssertPathIsReadWrite=/var/run/openvswitch/db.sock
PartOf=openvswitch-vtep.service

[Service]
Type=forking
EnvironmentFile=-/etc/sysconfig/openvswitch
ExecStart=/usr/share/openvswitch/scripts/ovs-ctl \
          --no-ovsdb-server --no-monitor --system-id=random \
          start $OPTIONS
ExecStop=/usr/share/openvswitch/scripts/ovs-ctl --no-ovsdb-server stop
ExecReload=/usr/share/openvswitch/scripts/ovs-ctl --no-ovsdb-server \
          --no-monitor --system-id=random \
          restart $OPTIONS
